# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#2AA198"
        color_bad = "#586E75"
        color_degraded = "#DC322F"
}

# order += "ipv6"
order += "read_file BRIGHTNESS"
order += "volume master"
order += "battery all"
order += "cpu_usage"
order += "memory"
# order += "disk /"
# order += "disk /home"
order += "wireless _first_"
# order += "ethernet _first_"
# order += "load"
order += "tztime local"

read_file BRIGHTNESS {
        format = "‚õØ  %content"
        path = "/home/hrouille/.config/brightness"
        max_characters = 5
}

volume master {
        format = "‚ô™  %volume"
        format_muted = "üîá: muted (%volume)"
        device = "default"
        mixer = "Master"
}

cpu_usage {
        format = " cpu  %usage "
}

load {
        format = " load %1min "
        # max_threshold = 0.3
}

disk "/" {
        # format = " hdd %avail "
        format = " ‚õÅ  %avail "
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
        format_up = " lan: %ip %speed "
        format_down = " no lan "
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        # status_chr = "Ôá¶"
        status_chr = "‚ö°"
        # status_bat = "bat"
        # status_bat = "‚òâ"
        status_bat = "Ôàì"
        # status_unk = "?"
        status_unk = ""
        # status_full = ""
        status_full = "‚òª"
        low_threshold = 15
        threshold_type = time
}

memory {
        format = "%used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = " DATE: %d.%m. TIME: %H:%M "
}
